[package]
name = "generate_{{ tfhe_version_underscored }}"
edition = "2024"
version = "0.9.0"
license = "BSD-3-Clause-Clear"

[workspace]

[dependencies]
clap = { version = "4.5", features = ["derive"] }

# TFHE-rs
tfhe = { features = [
    "boolean",
    "integer",
    "shortint",
    "zk-pok",
    "experimental-force_fft_algo_dif4",
], path = "../../../../tfhe" }
tfhe-versionable = { path = "../../../tfhe-versionable" }

